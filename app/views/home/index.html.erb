<!-- Hero Section -->
<section class="hero-section">
  <%= image_tag("hero-home.jpg", alt: "Mill Aluminium") %>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1>
      <span class="text-script">Bring the</span><br>
      Outdoors Indoors
    </h1>
  </div>
</section>

<!-- Image Grid Section 1 -->
<section class="section-padding">
  <div class="container-fluid px-4">
    <div class="row g-3">
      <% if @featured_images_1 %>
        <% @featured_images_1.each do |item| %>
          <div class="col-md-4">
            <div class="grid-item">
              <%= image_tag(url_for(item.image), alt: item.name) %>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Placeholder images -->
        <div class="col-md-4">
          <div class="grid-item">
            <%= image_tag("placeholder-1.jpg", alt: "Mill Aluminium") %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="grid-item">
            <%= image_tag("placeholder-2.jpg", alt: "Mill Aluminium") %>
          </div>
        </div>
        <div class="col-md-8">
          <div class="grid-item">
            <%= image_tag("placeholder-3.jpg", alt: "Mill Aluminium") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="grid-item">
            <%= image_tag("placeholder-4.jpg", alt: "Mill Aluminium") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Text Content Section -->
<section class="section-padding-sm bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <p class="lead">
          Aluminium solutions that <strong>seamlessly extend</strong> your living space, framing panoramic views
          while bringing comfort and natural light into your everyday life.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Full Width Image -->
<section>
  <div class="container-fluid px-0">
    <%= image_tag("full-width-home.jpg", alt: "Mill Aluminium", class: "w-100") %>
  </div>
</section>

<!-- Dark Section with Text -->
<section class="section-padding" style="background-color: #1a1a1a; color: white;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <p class="text-uppercase mb-3" style="letter-spacing: 2px; font-size: 0.875rem;">MISSION</p>
        <h2 class="mb-4" style="font-size: 2.5rem; font-weight: 300;">
          Precision <span class="text-uppercase" style="font-weight: 600;">ENGINEERED</span><br>
          <span class="text-uppercase" style="font-weight: 600;">FOR MODERN</span> <span class="text-script font-serif" style="font-weight: 400;">Comfort</span>
        </h2>
      </div>
    </div>
  </div>
</section>

<!-- Feature Sections with Image and Text -->
<section class="section-padding">
  <div class="container-fluid">
    <div class="row align-items-center mb-5">
      <div class="col-md-6 order-md-2">
        <%= image_tag("feature-1.jpg", alt: "Mill Aluminium", class: "w-100") %>
      </div>
      <div class="col-md-6 order-md-1 px-5">
        <p class="text-uppercase mb-3" style="letter-spacing: 1px; font-size: 0.75rem; color: #666;">PRESTIGE</p>
        <h3 class="mb-4" style="font-size: 1.5rem; font-weight: 600; text-transform: uppercase;">
          DOOR COLLECTION
        </h3>
        <p style="color: #666;">
          The prestige door collection combines innovative craftsmanship with practical elegance.
          Premium materials deliver strength and beauty that lasts, creating thoughtful transitions
          between indoor and outdoor spaces, seamlessly defined by construction and beauty.
        </p>
      </div>
    </div>

    <div class="row align-items-center mb-5">
      <div class="col-md-6">
        <%= image_tag("feature-2.jpg", alt: "Mill Aluminium", class: "w-100") %>
      </div>
      <div class="col-md-6 px-5">
        <p class="text-uppercase mb-3" style="letter-spacing: 1px; font-size: 0.75rem; color: #666;">FOR RESIDENTIAL SPACES</p>
        <h3 class="mb-4" style="font-size: 1.5rem; font-weight: 600; text-transform: uppercase;">
          STAIR INDOOR
        </h3>
        <p style="color: #666;">
          Elegant indoor stair solutions crafted from premium aluminium, combining modern aesthetics
          with structural integrity. Each design element serves both form and function, creating
          striking vertical connections within your home.
        </p>
      </div>
    </div>

    <div class="row align-items-center">
      <div class="col-md-6 order-md-2">
        <%= image_tag("feature-3.jpg", alt: "Mill Aluminium", class: "w-100") %>
      </div>
      <div class="col-md-6 order-md-1 px-5">
        <p class="text-uppercase mb-3" style="letter-spacing: 1px; font-size: 0.75rem; color: #666;">DESIGN</p>
        <h3 class="mb-4" style="font-size: 1.5rem; font-weight: 600; text-transform: uppercase;">
          RAILING
        </h3>
        <p style="color: #666;">
          Precision-engineered railings that blend safety with sophisticated design.
          Our aluminium railing systems offer unobstructed views while providing reliable protection,
          perfect for balconies, terraces, and staircases.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Quote Section -->
<section class="section-padding" style="background-color: #f5f5f5;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h2 class="mb-0" style="font-size: 2.5rem; font-weight: 300; line-height: 1.4;">
          <span class="text-uppercase" style="font-weight: 600;">EVERY PROJECT</span>
          <span class="text-script font-serif">finds its sense of</span><br>
          <span class="text-uppercase" style="font-weight: 600;">SPACE TRANSFORMED</span>
        </h2>
      </div>
    </div>
  </div>
</section>

<!-- Projects Grid -->
<section class="section-padding">
  <div class="container">
    <div class="row g-4">
      <% if @featured_projects && @featured_projects.any? %>
        <% @featured_projects.each do |project| %>
          <div class="col-md-6">
            <%= link_to project_path(project), class: "text-decoration-none" do %>
              <div class="grid-item">
                <%= image_tag(url_for(project.image), alt: project.name) %>
                <div class="grid-item-overlay">
                  <h4 class="grid-item-title"><%= project.name %></h4>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <!-- Placeholder projects -->
        <div class="col-md-6">
          <div class="grid-item">
            <%= image_tag("project-1.jpg", alt: "Mill - Luxury Home") %>
            <div class="grid-item-overlay">
              <p class="mb-1" style="font-size: 0.875rem;">Mill - Luxury Home</p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="grid-item">
            <%= image_tag("project-2.jpg", alt: "Mill - Modern House") %>
            <div class="grid-item-overlay">
              <p class="mb-1" style="font-size: 0.875rem;">Mill - Modern House</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

