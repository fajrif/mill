<!-- Hero Section -->
<section class="hero-section">
  <%= image_tag("products-hero.jpg", alt: "Mill Aluminium Products") %>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <p class="lead mb-0">Our products are designed to <span class="text-script">adapt</span> to the</p>
    <p class="lead mb-0">many ways people live. Each collection</p>
    <p class="lead mb-0">offers its own character. Together, they</p>
    <p class="lead">create <span class="text-script">possibilities</span> for spaces that feel</p>
    <p class="lead"><span class="text-script">seamless and alive</span></p>
  </div>
</section>

<!-- Products Title -->
<section class="section-padding-sm">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h2 style="font-size: 2rem; font-weight: 400; text-transform: uppercase; letter-spacing: 1px;">OUR PRODUCTS</h2>
      </div>
    </div>
  </div>
</section>

<!-- Products Grid -->
<section class="section-padding">
  <div class="container">
    <div class="row g-4">
      <% @products.each do |product| %>
        <div class="col-md-6">
          <%= link_to product_path(product), class: "text-decoration-none" do %>
            <div class="grid-item">
              <%= image_tag(url_for(product.image), alt: product.name) %>
              <div class="grid-item-overlay">
                <h4 class="grid-item-title"><%= product.name %></h4>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @products.total_pages > 1 %>
      <div class="text-center mt-5">
        <%= paginate @products %>
      </div>
    <% end %>
  </div>
</section>

<!-- Contact Form Section -->
<section class="contact-form-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <h2 class="text-center mb-4">
          <span class="text-uppercase">TELL US WHAT</span><br>
          <span class="text-script">you need</span>
        </h2>
        <%= render "shared/contact_form" %>
      </div>
    </div>
  </div>
</section>
