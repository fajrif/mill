<section class="pt-0 wow animate__fadeIn">
    <div class="container margin-40px-bottom sm-margin-20px-bottom">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center">
                <h3 class="alt-font text-extra-dark-gray font-weight-400">Other Product</h3>
            </div>
        </div>
    </div>
    <div class="container">
      <div class="row justify-content-center">
          <% @products.each_with_index do |product| %>
            <!-- start services item -->
            <div class="col-12 col-md-6 margin-40px-bottom sm-margin-20px-bottom wow animate__fadeInUp">
                <div class="margin-20px-bottom overflow-hidden image-hover-style-1">
                  <a href="<%= product_path(product) %>">
                    <%= image_tag url_for(product.image), class: "w-100" %>
                  </a>
                </div>
                <div>
                  <a href="<%= product_path(product) %>" class="alt-font margin-10px-bottom d-block text-extra-large text-extra-dark-gray font-weight-600"><%= product.title %></a>
                  <p><%= product.short_description %></p>
                </div>
                <div>
                  <a href="<%= product_path(product) %>" class="text-uppercase alt-font text-extra-dark-gray font-weight-400 text-medium w-100">Read More <i class="ti-arrow-right margin-5px-left text-black text-medium position-relative top-2" aria-hidden="true"></i></a>
                </div>
            </div>
            <!-- end services item -->
          <% end %>
      </div>
    </div>
</section>
