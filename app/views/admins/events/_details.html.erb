<table class="table table-hover">
	<tr>
		<td style="width:15%;"><b>ID</b></td>
		<td><%= @event.id %></td>
	</tr>
	<% if @event.image.attached? %>
	<tr>
		<td><b>Image</b></td>
		<td>
			<%= image_tag @event.image.variant(resize_to_limit: [100,100]) %>
			<%= link_to delete_attachment_image_admins_event_path(@event.id, @event.image.id), :class => "ms-2 btn btn-danger btn-sm", :data => { :confirm => 'Are You sure want to delete this image?' }, :method => :delete do %>
				<i class="ri-delete-bin-fill"></i>
			<% end %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td><b>Title</b></td>
		<td><h5 class="fs-14 mb-0 text-body"><%= @event.title %></h5></td>
	</tr>
	<tr>
		<td><b>Slug</b></td>
		<td><%= link_to event_path(@event), event_path(@event) %></td>
	</tr>
	<tr>
		<td><b>Status</b></td>
		<td>
			<h5 class="fs-14 mb-1"><%= @event.published_label %></h5>
			<p class="text-muted mb-0">Date : <%= @event.published_date_label %></p>
		</td>
	</tr>
	<tr>
		<td><b>Short Description</b></td>
		<td><%= @event.short_description %></td>
	</tr>
	<tr>
		<td><b>Content</b></td>
		<td><%= raw @event.content %></td>
	</tr>
</table>
