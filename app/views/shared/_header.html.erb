<!-- start header -->
<header class="no-sticky">
    <!-- start navigation -->
    <nav class="navbar full-width-pull-menu navbar-top-scroll no-border-top nav-box-width bg-black white-link no-transition">
        <!-- start navigation panel -->
        <div class="container-fluid nav-header-container h-80px">
            <!-- start logo -->
            <div class="col-auto ps-0">
              <%= link_to root_path, title: "Mill", class: "logo" do %>
                <%= image_tag("logo-white.png", alt: "Mill") %>
              <% end %>
            </div>
            <!-- end logo -->
            <!-- start main menu -->
            <div class="col-auto pe-0">
                <div class="menu-wrap full-screen menu-overlay">
                    <!-- Fullscreen menu overlay -->
                    <div class="menu-overlay-content">
                        <!-- Top Section: Logo and Close Button -->
                        <div class="menu-overlay-header">
                            <div class="menu-overlay-logo">
                                <%= link_to root_path, title: "Mill" do %>
                                    <%= image_tag("logo-black.png", alt: "Mill", class: "menu-logo-img") %>
                                <% end %>
                            </div>
                            <button class="menu-close-btn" id="close-button" aria-label="Close menu">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M18 6L6 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M6 6L18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                        </div>

                        <!-- Main Content: Two Column Layout -->
                        <div class="menu-overlay-body">
                            <!-- Left Column: Contact Info and Social Links -->
                            <div class="menu-body-left">
                                <div class="menu-contact-info">
                                    <a href="tel:<%= configatron.phone.gsub(' ', '') %>" class="menu-contact-link"><%= configatron.phone %></a>
                                    <a href="mailto:<%= configatron.email %>" class="menu-contact-link"><%= configatron.email %></a>
                                </div>
                                <div class="menu-social-links">
                                    <a href="<%= configatron.social_instagram_url %>" target="_blank" class="menu-social-icon" aria-label="Instagram">
                                        <i class="fa-brands fa-instagram" aria-hidden="true"></i>
                                    </a>
                                    <a href="<%= configatron.social_facebook_url %>" target="_blank" class="menu-social-icon" aria-label="Facebook">
                                        <i class="fa-brands fa-facebook" aria-hidden="true"></i>
                                    </a>
                                    <a href="<%= configatron.social_youtube_url %>" target="_blank" class="menu-social-icon" aria-label="YouTube">
                                        <i class="fa-brands fa-youtube" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>

                            <!-- Right Column: Navigation Menu and CTA Buttons -->
                            <div class="menu-body-right">
                                <div class="menu-nav-wrapper">
                                    <ul class="menu-nav-list">
                                        <li><a class="menu-nav-link<%= ' active' if is_home_page? %>" href="<%= root_url %>">Home</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_about_page? %>" href="<%= about_url %>">About</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_products_page? %>" href="<%= products_url %>">Products</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_projects_page? %>" href="<%= projects_url %>">Projects</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_articles_page? %>" href="<%= articles_url %>">Articles</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_events_page? %>" href="<%= events_url %>">Events</a></li>
                                        <li><a class="menu-nav-link<%= ' active' if is_contact_page? %>" href="<%= contact_url %>">Contact Us</a></li>
                                    </ul>
                                </div>
                                <div class="menu-cta-wrapper">
                                    <a href="<%= configatron.whatsapp_inquiry_url %>" target="_blank" class="menu-cta-btn">
                                        <span>INQUIRY</span>
                                        <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
                                    </a>
                                    <a href="<%= configatron.whatsapp_service_url %>" target="_blank" class="menu-cta-btn">
                                        <span>SERVICE REQUEST</span>
                                        <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end main menu -->
                <button class="navbar-toggler mobile-toggle" type="button" id="open-button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
        <!-- end navigation panel -->
    </nav>
    <!-- end navigation -->
</header>
<!-- end header -->
